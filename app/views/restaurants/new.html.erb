<div class="container">
  <h1>Add a new restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
     <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: :translate %>
    <%= f.button :submit, class: 'btn btn-secondary' %>
  <% end %>
  <%= link_to "Back", restaurants_path, class: 'btn btn-outline-secondary mt-2' %>
</div>
