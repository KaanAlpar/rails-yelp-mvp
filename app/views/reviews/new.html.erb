<div class="text-center">
  <h1>Add a review for <%= @restaurant.name %></h1>
  <div class="bg-light p-3">
    <h2><%= @restaurant.category %></h2>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>
  <div class="container">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: %i(1 2 3 4 5), prompt: :translate %>
      <%= f.button :submit, class: 'btn btn-secondary' %>
    <% end %>
    <%= link_to "Go back", restaurant_path(@restaurant), class: 'btn' %>
  </div>
</div>
